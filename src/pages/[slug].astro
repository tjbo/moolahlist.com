---
import Welcome from "../components/Welcome.astro";
import Layout from "../components/Layout.astro";
import Section from "../components/Section.astro";
import HygraphSlices from "../components/HygraphSlices.astro";
import { landingPages } from "../hypgrah.js";

export async function getStaticPaths() {
  const p = landingPages.map((page) => {
    let slug = page.slug;
    return { params: { slug: slug }, props: { page } };
  });
  return p;
}

const { page } = Astro.props;
---

<Layout metaTitle={page.metaTitle}>
  <HygraphSlices slices={page.content} />
</Layout>
