---
const { orderClass, title, items } = Astro.props;
import { getUrlFromSlug } from "../hypgrah.js";
---

<div class={`flex-col mb-6 ${orderClass}`}>
  <b>{title}</b>
  <ul class="!p-0 !m-0 !ml-0 !list-none">
    {
      items.map((link) => {
        return (
          <li class="!m-0 !p-0">
            <a
              class="text-white font-normal font-display text-md hover:underline min-h-6 py-2 block"
              href={getUrlFromSlug(link.internalPage[0].slug)}
            >
              {link.text}
            </a>
          </li>
        );
      })
    }
  </ul>
</div>
