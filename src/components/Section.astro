---
const {
  title = '',
  bg = 'default',
  innerWidth = 'normal',
} = Astro.props

const maxWidth = innerWidth === 'small' ? 'max-w-[500px]' : 'max-w-[1024px]'

// background color mapping
const bgClass = {
  default: 'bg-white',
  light: 'bg-gray-50',
  transparent: 'bg-transparent',
}[bg]
---

<section class={`w-full py-5 ${bgClass}`}>
  <div class={`w-full mx-auto px-6 py-3 ${maxWidth}`}>
    {title && <h3 class="text-xl font-semibold mb-3">{title}</h3>}
    <slot />
  </div>
</section>
