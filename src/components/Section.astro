---
const {
  title = "",
  background = "default",
  innerWidth = "normal",
} = Astro.props;

const maxWidth = innerWidth === "small" ? "max-w-[500px]" : "max-w-[1180px]";

const bgClass = {
  default: "bg-white",
  light: "bg-white",
  dark: "bg-gray-50",
  transparent: "bg-transparent",
}[background];
---

<section class={`w-full py-3 px-4 md:px-6 ${bgClass}`}>
  <div class={`w-full mx-auto  py-3 ${maxWidth}`}>
    {title && <h3 class="text-xl font-semibold mb-3">{title}</h3>}
    <slot />
  </div>
</section>
