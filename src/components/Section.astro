---
const {
  title = "",
  background = "default",
  innerWidth = "normal",
  variant = "normal",
} = Astro.props;

const maxWidth = innerWidth === "small" ? "max-w-[500px]" : "max-w-desktop";

const bgClass = {
  default: "bg-white",
  light: "bg-white",
  dark: "bg-gray-50",
  transparent: "bg-transparent",
}[background];
---

<section
  class={`w-full ${variant === "compact" ? "py-3" : "py-3"} px-4 md:px-6 ${bgClass}`}
>
  <div
    class={`w-full mx-auto  ${variant === "compact" ? "!py-0" : "py-3"} ${maxWidth}`}
  >
    {title && <h3 class="text-xl font-semibold mb-3">{title}</h3>}
    <slot />
  </div>
</section>
